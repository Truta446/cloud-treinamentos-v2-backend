generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String    @id @default(cuid())
  name      String
  cpf       String
  email     String
  phone     String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  address address[]
}

model address {
  id           String    @id @default(cuid())
  street       String
  number       String
  complement   String?
  neighborhood String?
  city         String
  state        String
  country      String
  postalCode   String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime? @updatedAt

  userId String
  user   user   @relation(fields: [userId], references: [id])
}
